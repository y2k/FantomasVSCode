{
  "name": "fantomasvscode",
  "displayName": "Fantomas",
  "description": "FSharp source code formatter",
  "version": "0.0.1",
  "publisher": "zelay",
  "engines": {
    "vscode": "^1.13.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.fntms.format"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "commands": [
      {
        "command": "extension.fntms.format",
        "title": "Fantomas: Format F#"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "typescript": "^2.0.3",
    "vscode": "^1.0.0",
    "mocha": "^2.3.3",
    "@types/node": "^6.0.40",
    "@types/mocha": "^2.2.32"
  },
  "dependencies": {
    "@types/tmp": "0.0.33",
    "tmp": "0.0.31",
    "cross-spawn": "^5.1.0"
  }
}
